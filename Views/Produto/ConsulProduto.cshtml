@model IEnumerable<TCC_Sistema_Cliente_Jogos_2022.Models.Produto>

@{
    ViewBag.Title = "ConsulProduto";
}

@if (TempData["MensagemAviso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemAviso"]
    </div>
}

<h2>Produtos:</h2>


<p>
    @Html.ActionLink("Adicionar um novo Produto", "CadProduto")
</p>
<div class="row" style="padding:2% 5%">

    @foreach (var item in Model)
    {

        <div class="item  col-xs-4 col-lg-4">
            <div class="thumbnail" id="BoxPesquisa">
                <a href="@Url.Action("DetalhesProduto", new { codprod = item.CodProd })">
                    <img class="img-thumbnail" src="@Url.Content(item.ImgCapa)" alt="Img produto" />
                </a>

                <div class="center-cropped"
                     style="background-image: url('@Url.Content(item.ImgCapa)');">
                </div>
                <div class="caption">
                    <h3 class="group inner list-group-item-heading">
                        @Html.DisplayFor(modelItem => item.ProdNome)
                    </h3>
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <p class="lead">
                                R$@Html.DisplayFor(modelItem => item.ProdValor)
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <a class="btn btn-success" id="btnAddCar" href="@Url.Action("DetalhesProduto", new { codprod = item.CodProd })">Detalhes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>   
    }

</div>
