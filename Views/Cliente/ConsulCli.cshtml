@model IEnumerable<TCC_Sistema_Cliente_Jogos_2022.Models.Cliente>

@{
    ViewBag.Title = "ConsulCli";
}

@if (TempData["MensagemAviso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemAviso"]
    </div>
}
<h2>Consulta dos Clientes</h2>
@using (Html.BeginForm("ConsulCli", "Cliente", FormMethod.Get))
{
    
    <div class="input-group inputPesqGeral">
            <input type="text" class="form-control" id="CPFCli" type="text" name="CPFCli" placeholder="Procure pelo CPF" />
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
        </div>        
    </div>
}


<div class="container">
    <div class="table-wrapper">
        @*<div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <a href="@Url.Action("CadCliente")" class="btn btnAdd" data-toggle="modal"><img src="~/Image/mais.png" alt="Mais" id="icon" /> <span>Adicionar um novo Cliente</span></a>
                </div>
            </div>
        </div>*@
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNasc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelCli)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNasc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailCli)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelCli)
                    </td>
                    <td>
                        <a href="@Url.Action("EdiCliente", new { CPF = item.CPF })" class="edit" data-toggle="modal"><img id="icon" src="~/Image/editar.png" alt="Altera" /></a>
                        <a href="@Url.Action("DelCliente", new { CPF = item.CPF}) class="delete" data-toggle="modal"><img id="icon" src="~/Image/cruzado.png" alt="Delete" /></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
