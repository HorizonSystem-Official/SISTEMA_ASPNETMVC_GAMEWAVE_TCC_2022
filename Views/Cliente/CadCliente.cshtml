@model TCC_Sistema_Cliente_Jogos_2022.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "CadCliente";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" id="conteinerCadUser">
        <div class="row text-center" id="tittleCadUser">
            <h2>Cadastro</h2>
        </div>
        <form id="formCadUser">
            <div class="row">
                @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-12 paddingCadUser", @id = "paddingCadUser" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.NomeCliente, htmlAttributes: new { @class = "control-label col-md-12", @id = "paddingCadUser" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NomeCliente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeCliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.DataNasc, htmlAttributes: new { @class = "control-label col-md-12", @id = "labelCadUser" })
                    @Html.EditorFor(model => model.DataNasc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataNasc, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.TelCli, htmlAttributes: new { @class = "control-label col-md-12", @id = "labelCadUser" })
                    @Html.EditorFor(model => model.TelCli, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TelCli, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(model => model.EmailCli, htmlAttributes: new { @class = "control-label col-md-12", @id = "labelCadUser" })
                    @Html.EditorFor(model => model.EmailCli, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailCli, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-12", @id = "labelCadUser" })
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(model => model.ConfirmSenha, htmlAttributes: new { @class = "control-label col-md-12", @id = "labelCadUser" })
                    @Html.EditorFor(model => model.ConfirmSenha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmSenha, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" value="Cadastrar" class="btn btn-default" id="btnCadUser" />
            </div>
        </form>
    </div>

}

<div>
    @Html.ActionLink("Retornar a listagem dos clientes", "ConsulCli")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
