@model TCC_Sistema_Cliente_Jogos_2022.Models.Venda

@{
    ViewBag.Title = "FazerVenda";
}

<h2>Realizar uma venda</h2>
<a href="@Url.Action("Index", "Login")"><img src="~/Image/left.png" alt="volta" class="marginL5" id="icon" /> <span>voltar</span></a>
@using (Html.BeginForm("FazerVenda", "Carrinho", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    <div class="container" id="boxComente">
        <form id="formCadUser">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                @Html.LabelFor(model => model.FormaPag, htmlAttributes: new { @class = "control-label col-md-12 paddingCadUser", @id = "paddingCadUser" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.FormaPag, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FormaPag, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.Parcela, htmlAttributes: new { @class = "control-label col-md-12 paddingCadUser", @id = "paddingCadUser" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Parcela, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Parcela, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="col-md-12">
                <input type="submit" value="Efeutuar" class="btn btn-default" id="btnCadUser" />
            </div>
        </form>
        </div>
    }


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
