@model TCC_Sistema_Cliente_Jogos_2022.Models.Cupom

@{
    ViewBag.Title = "EdiCupom";
}

<h2>Editar esse Cupom</h2>
<a href="@Url.Action("ConsulCupom")"><img src="~/Image/left.png" alt="volta" class="marginL5" id="icon" /> <span>voltar</span></a>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
            <div class="container" id="conteinerCadUser">
                <div class="row text-center" id="tittleCadUser">
                    <h2>Atualzar Cupom</h2>
                </div>
                <form id="formCadUser">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CodCupom)
                    <div class="row">
                        @Html.LabelFor(model => model.CupomTxt, htmlAttributes: new { @class = "control-label col-md-12", @id = "paddingCadUser" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CupomTxt, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CupomTxt, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.ValorCupom, htmlAttributes: new { @class = "control-label col-md-12", @id = "labelCadUser" })
                            @Html.EditorFor(model => model.ValorCupom, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ValorCupom, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.NumLimiteCompras, htmlAttributes: new { @class = "control-label col-md-12", @id = "labelCadUser" })
                            @Html.EditorFor(model => model.NumLimiteCompras, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumLimiteCompras, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="Atualizar" class="btn btn-default" id="btnCadUser" />
                    </div>
                </form>
            </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
